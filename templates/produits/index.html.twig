{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center mt-3">Administration des Produits</h1>

		<table class="table table-hover mt-5">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Marque</th>
					<th>Image</th>
					<th>Categorie</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<td>{{ produit.nom }}</td>
						<td>{{ produit.marque }}</td>
						<td> <img class="img img-mini" src="{{ produit.image }}" alt="{{ produit.nom }}"></td>
						<td>{{ produit.categorie }}</td>
						<td>
							<a class="btn btn-sm btn-info" href="{{ path('produits_show', {'id': produit.id}) }}">
                                <i class="fas fa-eye"></i>
                            </a>
							<a class="btn btn-sm btn-warning" href="{{ path('produits_edit', {'id': produit.id}) }}">
                                <i class="fas fa-pen"></i>
                            </a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Aucun produit</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-sm btn-primary" href="{{ path('produits_new') }}">Ajouter un produit</a>
	</div>
{% endblock %}
